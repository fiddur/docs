.docs-home
  color: color_oil;
  
  .banner
    background: none;
    color: color_oil;
    margin: 0;
    transition: min-height 100ms ease;
    color: #333;
    padding: 40px 0;
    
    i
      font-size: inherit;
    
    h1, p 
      color: #333;
      line-height: 1.3;
      
    p + button
      margin: 0 15px;
      
  .section-product
    h2
      padding-top: 50px;
      padding-bottom: 40px;
      margin: 0;
      font-size: 35px;
      
      span
        font-size: 14px;
        color: color_oil;
        display: block;
        
        +breakpoint("desktop")
          display: inline;
          margin-left: 30px;
section
  .circle-list
    list-style: none;
    padding: 0;
    grid(2, 0, 'li');
    
    +breakpoint("mobile-landscape")
      grid(3, 0, 'li');
      
    +breakpoint("tablet")
      grid(5, 0, 'li');

    +breakpoint("desktop")
      grid(6, 0, 'li');
      
  .circle-list.circle-list-howtos
    grid(2, 0, 'li');
    
    +breakpoint("tablet")
      grid(3, 0, 'li');
    
    .circle-logo
      position: relative;
      min-height: 5em;
      width: 100%;
      transition: none;
      transform: none;

      .title
        padding-left: 4.5em;
        padding-right: 1em;
        text-align: left;
        margin: 0;
        
        +breakpoint("tablet")
          padding-top: 0.8em;
          padding-left: 5.5em;
          font-size: 15px;
          max-width: 300px;

      .logo
        position: absolute;
        top: 0;
        left: 0;
        border-radius: 3px;
        font-size: 6px;
        background-color: #A9B3BC;
        transition: background-color 100ms cubic-bezier(0.455, 0.03, 0.515, 0.955);
         
        +breakpoint("tablet")
          font-size: 8px;
        
        &:before
          font-size: 3.5em;
          color: white;
          
      &:hover .logo
        background-color: color_oil;
        
        
          

.subcontent-box
  border-radius: 3px;
  padding: 20px 30px;
  padding-top: 10px;
  background: white;
  
  ul 
    list-style: none;
    padding: 0;
    
    li 
      margin: 10px 0;
  
  h3 
    color: color_oil;
    text-transform: uppercase;
    font-size: 13px;
    font-weight: bold;
    letter-spacing: 0.05em;

.api-docs
  .subcontent-box
    +breakpoint("desktop")
      margin-top: -15px;
      
  .api-link 
    color: color_oil;
    position: relative;
    display: block;
    
    &:hover i 
      color: color_red;
    
    strong
      display: block;
      color: #333;
      
      +breakpoint("desktop")
        display: inline;
        line-height: 50px;
        font-size: 16px;
        color: #333;
    
  i 
    font-size: 40px;
    padding-top: 5px;
    margin-right: 15px;
    display: inline-block;
    vertical-align: top;
    color: #bcc2c7;
    margin-bottom: 0px;
    
    +breakpoint("desktop")
      margin-bottom: -15px;
 
.section-product:nth-of-type(even)
  background: #FAFAFA;
  
.section-product
  padding-bottom: 60px;

.showcase
  .container
    margin: 0 auto;
    padding-top: 40px;
    
  a 
    color: color_oil;
    cursor: pointer;
    height: 190px;
    position: relative;

    &:focus
      text-decoration: none;
    
    +breakpoint("tablet")
      height: 140px;
    
    &:hover
      i 
        color: color_red;
      
    i 
      font-size: 30px;
      padding-top: 5px;
      margin-right: 20px;
      display: inline-block;
      vertical-align: top;
      color: lighten(color_oil, 60%);
      
      +breakpoint("desktop")
        font-size: 40px;
      
    .content
      display: block;
      max-width: 200px;
      
      +breakpoint("tablet")
        max-width: 170px;
        display: inline-block;
        vertical-align: top;
      
      
    strong
      color: #333;
      font-size: 18px;
      
    p 
      margin-top: 5px;
      font-size: 13px;

.circle-list-howtos
  margin-bottom: 60px;

.icon-scale
  i
    transition: transform 150ms cubic-bezier(0.455, 0.03, 0.515, 0.955), color 150ms cubic-bezier(0.455, 0.03, 0.515, 0.955);
    
  &:hover i
    transform: scale(1.15);

.js-sticky-nav
  .container
    clearfix();
    
    ul
      display: none;
      
      +breakpoint("desktop")
        display: block;
    
    ul,
    form
      +breakpoint("desktop")
        float: left;
        width: 65%;
        
    form
      +breakpoint("desktop")
        width: 35%;