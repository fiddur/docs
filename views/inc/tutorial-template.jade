#tutorial-template.docs-single.animated.fadeIn.hide
  .navigation-bar
    .wrapper
      .container
        .breadcrumbs
          a(href="/")
            span.text Documentation
          a
            i.icon-budicon-461
            span.text title


        form#search(role="search", action=env.BASE_URL + "/search", autocomplete="off")
          .form-group.search-control
            i.icon-budicon-489
            input#search-input.form-control(type="text", placeholder="Search for docs", name="stq")
  
  .js-doc-template.container
    .row
      .col-sm-3
        include sidebar-menu

      .col-sm-9.col-md-7
        section.docs-content(data-swiftype-index="true")
          h1.tutorial-title
          ul.nav.nav-tabs
            li.active
              a(href="#tutorial-1" data-toggle="tab") Tutorial 1
            li
              a(href="#tutorial-2" data-toggle="tab") Tutorial 2

          .tab-content
            .tab-pane.active#tutorial-1
            .tab-pane#tutorial-2

      .col-md-2
        nav.sidebar-sbs.js-sticky-nav
          .wrapper
            h2 Step by step
            ul 
              li.is-active
                a(href="") Loading sections...

  include document-footer