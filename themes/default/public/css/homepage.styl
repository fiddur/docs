.docs-home
  color: color_oil;
  
  .banner
    background: #EAF1F3;
    color: color_oil;
    margin: 0;
    padding-top: 30px;
    padding-bottom: 30px;
    
    +breakpoint("desktop")
      padding-top: 60px;
    
    h1, p 
      color: currentColor;
      line-height: 1.3;
      
    h1 + p 
      opacity: 0.6;
      
  section
    h2
      padding-top: 40px;
      margin-bottom: 40px;
      font-size: 35px;
      
      span
        font-size: 14px;
        color: color_oil;
        display: block;
        
        +breakpoint("desktop")
          display: inline;
          margin-left: 30px;

.sdk-list
  list-style: none;
  padding: 0;
  grid(2, 0, 'li');
  
  +breakpoint("mobile-landscape")
    grid(3, 0, 'li');
    
  +breakpoint("tablet")
    grid(4, 0, 'li');

  +breakpoint("desktop")
    grid(6, 0, 'li');

.subcontent-box
  border: 1px solid #EAEEF3;
  border-radius: 3px;
  padding: 20px 30px;
  padding-top: 10px;
  background: #FCFDFE;
  
  ul 
    list-style: none;
    padding: 0;
    
    li 
      margin: 5px 0;
  
  h3 
    color: color_oil;
    text-transform: uppercase;
    font-size: 13px;
    font-weight: bold;
    letter-spacing: 0.05em;
      
.showcase
  border-top: 1px solid #EAEEF3;
  border-bottom: 1px solid #EAEEF3;
  
  .container
    margin: 0 auto;
    padding-top: 40px;
    
  a 
    color: color_oil;
    cursor: pointer;
    height: 190px;
    
    &:focus
      text-decoration: none;
    
    +breakpoint("tablet")
      height: 140px;
    
    &:hover
      i 
        color: color_red;
      
    i 
      font-size: 30px;
      padding-top: 5px;
      margin-right: 20px;
      display: inline-block;
      vertical-align: top;
      color: lighten(color_oil, 60%);
      
      +breakpoint("desktop")
        font-size: 40px;
      
    .content
      display: block;
      
      +breakpoint("tablet")
        max-width: 170px;
        display: inline-block;
        vertical-align: top;
      
      
    strong
      color: #333;
      font-size: 18px;
      
    p 
      margin-top: 5px;
      font-size: 13px;

.js-sticky-nav
  .container
    clearfix();
    
    ul
      display: none;
      
      +breakpoint("desktop")
        display: block;
    
    ul,
    form
      +breakpoint("desktop")
        float: left;
        width: 65%;
        
    form
      +breakpoint("desktop")
        width: 35%;