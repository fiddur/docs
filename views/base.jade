      title= title
    - else
      title=site.title
    meta(charset="utf-8")
    include inc/sharing-metas

    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name="google-site-verification", content="4aSwkVvotRegQ6g32k-21r38Fls9sO8VT5LytKdin3o")

    - if (canonicalUrl)
      link(href=canonicalUrl, rel="canonical")
    link(href="//cdn.auth0.com/styleguide/latest/lib/logos/img/favicon.png", rel="shortcut icon")
    link(href='//cdn.auth0.com/styleguide/latest/index.min.css', rel='stylesheet')
    link(href="//cdn.auth0.com/web-header/latest/standalone.css", rel="stylesheet")

    <!--[if lt IE 9]>
