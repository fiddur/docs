        a(href='/docs/api/info')
          span.sidebar-item-name Overview
      li.sidebar-item.sidebar-item-depth0
        a(href='/docs/api/postman')
          span.sidebar-item-name Testing with Postman
      li.sidebar-item.sidebar-item-depth0
