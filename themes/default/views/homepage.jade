    var $quickstarts = $('.js-carousel');

    $quickstarts.on('initialized.owl.carousel', function() {
      if (window.requestAnimationFrame) {
        requestAnimationFrame(function() {
          $quickstarts.addClass('rendered');
        });
      } else {
        $quickstarts.addClass('rendered');
      }
    });

    $quickstarts.owlCarousel({
      margin: 20,
      center: true,
      dots: true,
      navContainerClass: 'nav',
      navClass: ['prev', 'next'],
      baseClass: 'js-carousel',
      itemClass: 'item',
      dotsClass: 'dots',
      dotClass: 'dot',
      nav: false,
      responsive: {
        0: {
          items: 1,
          stagePadding: 60
        },
        380: {
          items: 2,
          stagePadding: 0
        },
        570: {
          items: 3,
          stagePadding: 0
        },
        768: {
          items: 4,
          stagePadding: 0
        },
        992: {
          items: 5,
          stagePadding: 0,
          center: false,
          dots: false
        }
      }
    });

    $quickstarts.on('click', '.item', function() {
      var curr = $quickstarts.find('.item.center').index();
      var clicked = $(this).index();

      if(clicked > curr) {
        $quickstarts.trigger('next.owl.carousel');
      }

      if (clicked < curr) {
        $quickstarts.trigger('prev.owl.carousel');
      }
    });

    

