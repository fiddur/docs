rel_width = 8em;

.circle-logo
  display: inline-block;
  text-align: center;
  font-size: 14px;
  width: rel_width;
  transition: transform 100ms cubic-bezier(0.455, 0.03, 0.515, 0.955);
  
  &:hover
    text-decoration: none;
    transform: scale(1.05);
    
    .logo 
      opacity: 0.9;
    
  .logo
    position: relative;
    height: rel_width;
    width: rel_width;
    background: #EAEEF3;
    color: #333;
    border-radius: 50%;
    
    &:before,
    &:after
      position: absolute;
      top: 50%;
      left: 50%;
      width: 50%;
      transform: translate(-50%, -50%);
      font-size: 3em;
    
    &:after
      content: "";
      display: block;
      background-size: contain;
      background-position: center center;
      background-repeat: no-repeat;
      width: 50%;
      height: 50%;
      
  .title
    color: #333;
    font-weight: bold;
    margin: 10px 0;
    min-height: 3em;
    
  &[data-name="how-to"]
    .logo:before
      top: 55%;
    
  &[data-name="angular"],
  &[data-name="angularjs"]
    .logo
      background: -webkit-linear-gradient(top left, #008BFF 40%, #2C6FAD 140%);
      background: linear-gradient(top left, #008BFF 40%, #2C6FAD 140%);
      
      &:after
        background-image: url('https://cldup.com/YNpure3x4Z.svg');
        
  &[data-name="ember"],
  &[data-name="emberjs"]
    .logo
      background: -webkit-linear-gradient(top left, #F46642 40%, #9C2202 140%);
      background: linear-gradient(top left, #F46642 40%, #9C2202 140%);
      
      &:after
        background-image: url('https://cldup.com/AcYPnXStyC.svg');
        width: 80%;
        height: 80%;
        
  &[data-name="node"],
  &[data-name="nodejs"]
    .logo
      background: -webkit-linear-gradient(top left, #78B743 40%, #9FE861 140%);
      background: linear-gradient(top left, #78B743 40%, #9FE861 140%);
      
      &:after
        background-image: url('https://cldup.com/QHrD4g1qxl.svg');
        width: 50%;
        height: 50%;
      
    
    