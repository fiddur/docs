extends base

block body
  .docs-single
    header.site-header!= webheader
    script.
      if (null != window.widget) {
        window.widget.getClient().getSSOData(false, function (err, data) {
          if (!data || !data.sso) return;
          $('header.site-header .login')
            .attr('href', "#{locals.uiURL}")
            .html('Open Dashboard');
        });
      }

    .navigation-bar
      .wrapper
        .container
          .breadcrumbs
            a(href!=env.BASE_URL)
              span.text Documentation
            a
              i.icon-budicon-461
              span.text= title


          form#search(role="search", action=env.BASE_URL + "/search", autocomplete="off")
            .form-group.search-control
              i.icon-budicon-489
              input.search-input.form-control(type="text", placeholder="Search for docs", name="stq")

    //- Start content
    .js-doc-template.container
      .row
        .col-sm-3
          include inc/sidebar-menu

        .col-sm-9
          section.docs-content(data-swiftype-index="true")
            block content
          
    include ../public/vendor/auth0-styleguide/lib/footer/demo.jade

  script(src=env.BASE_URL + '/js/docs.js')

  script(type='text/javascript').
    !function ($) {
      $(function(){
      $('pre').each(function (i, e) {
        // Ignore 'pre' elements inside .api-explorer elements
        if ($(e).closest('.api-explorer').length === 0) {
          $(e).addClass('hljs');
        }
      });
      //window.prettyPrint && prettyPrint();
      })
    }(window.jQuery);
