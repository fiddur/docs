doctype 5
html(lang="en")
  head
    title= title + ' - ' + site.title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="")
    meta(name="author", content="")

    link(rel="shortcut icon", href="//cdn.auth0.com/styleguide/latest/lib/logos/img/favicon.png")
    link(href=env.BASE_URL + "/css/bootstrap.css", rel="stylesheet", type='text/css')
    link(href=env.BASE_URL + "/css/default.css", rel="stylesheet", type='text/css')
    link(href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800", rel="stylesheet", type='text/css')
    link(href=env.BASE_URL + '/css/prettify.css', rel='stylesheet', type='text/css')

    <!--[if lt IE 9]>
    script(src="http://html5shim.googlecode.com/svn/trunk/html5.js")
    <![endif]-->

    include inc/analytics

  body
    .header
      .header-container
          h1= 'Auth0 - Windows Store - Tutorial'

    .container
      section.nosidebar
        != sections.content
    footer
        ul
          li.right
            span Powered by
              a(href="//auth0.com") Auth0

  script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js')
  script(src=env.BASE_URL + '/js/prettify.js')
  script(type='text/javascript')
    !function ($) {
      $(function(){
        $('pre').addClass('prettyprint');
        window.prettyPrint && prettyPrint()
      });
    }(window.jQuery);
