.docs-home
  color: color_oil;
  
  .banner
    background: #EAF1F3;
    color: color_oil;
    margin: 0;
    padding-top: 30px;
    padding-bottom: 30px;
    
    +breakpoint("desktop")
      padding-top: 60px;
    
    h1, p 
      color: currentColor;
      line-height: 1.3;
      
    h1 + p 
      opacity: 0.6;
      
  section
    h2
      padding-top: 40px;
      font-size: 35px;
      
      span
        margin-left: 30px;
        font-size: 14px;
        color: color_oil;
      
.showcase
  border-top: 1px solid #EAEEF3;
  border-bottom: 1px solid #EAEEF3;
  padding-top: 40px;
  
  .container
    margin: 0 auto;
    
  a 
    color: color_oil;
    cursor: pointer;
    padding-bottom: 20px;
    
    &:hover
      i 
        color: color_red;
      
    i 
      font-size: 30px;
      padding-top: 5px;
      margin-right: 20px;
      display: inline-block;
      vertical-align: top;
      color: lighten(color_oil, 60%);
      
      +breakpoint("desktop")
        font-size: 40px;
      
    .content
      display: inline-block;
      vertical-align: top;
      max-width: 200px;
      
    strong
      color: #333;
      font-size: 18px;
      
    p 
      margin-top: 5px;
      font-size: 12px;

.js-sticky-nav
  .container
    clearfix();
    
    ul
      display: none;
      
      +breakpoint("desktop")
        display: block;
    
    ul,
    form
      +breakpoint("desktop")
        float: left;
        width: 65%;
        
    form
      +breakpoint("desktop")
        width: 35%;
          
