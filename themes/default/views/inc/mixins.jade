mixin quickstart(name, type, icon, description, sample)
  .quickstart(data-type!=type)
    .symbol
      i(class!=icon)

    strong.title= name

    p.description= description
      .sample= sample

    .cta
      button.btn.btn-sm.btn-success Launch Quickstart

mixin showcaseItem(name, icon, href, description)
  a.col-sm-4.col-xs-6(href!=href)
    i(class!=icon)
    .content
      strong= name
      p= description

mixin circleLogo(name, slug, href)
  a.circle-logo(href!=href, data-name!=slug)
    .logo
    .title= name