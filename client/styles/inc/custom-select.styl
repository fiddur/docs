.custom-select
  display: inline-block;
  vertical-align: top;
  position: relative;
  border-radius: 3px;
  height: 32px;
  line-height: 32px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 13px;
  padding-right: 28px;
  
  &:hover
    color: #333;
  
  i 
    font-size: 12px;
    position: absolute;
    top: 3px;
    right: 9px;
    opacity: .7;
    animation: none;
  
  select
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    -webkit-appearance: none;
    cursor: pointer;