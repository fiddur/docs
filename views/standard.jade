extends base

block head
  script(src=getAssetBundleUrl('standard'))

block body
  .docs-single
    header#header!= webheader

    .navigation-bar
      .container
        ul.nav.nav-tabs.section-tabs
          li.nav-tab
            a(href='/docs/overview') Articles
          li.nav-tab
            a(href='/docs/sdks') SDKs
          li.nav-tab.active
            a(href='/docs/api/info') APIs
          li.nav-tab
            a(href='/docs/quickstarts') QuickStarts
          li.nav-tab
            a(href='/docs/appliance') Appliance
        form#search(role='search', action='/docs/search', autocomplete='off')
          .form-group.search-control
            i.icon-budicon-489
            input#search-input.search-input.form-control(type='text', placeholder='Search for docs', name='q')


    //- Start content
    .js-doc-template.container
      .row
        .col-sm-3
          block sidebar

        .col-sm-9
          section.docs-content
            block content
            
          - if (!locals.user)
            #try-banner
              include ../node_modules/auth0-styleguide/lib/try-banner/demo.jade
          
    include ../node_modules/auth0-styleguide/lib/footer/demo.jade
