html,
body
  &.overflow-hidden
    +breakpoint("desktop", "max")
      overflow hidden
      position relative

.sidebar-container
  +breakpoint("desktop", "max")
    padding-left 0
    padding-right 0
    z-index 1

  // Fix react-sticky placeholder height bug (only on mobile)
  .sticky
    +breakpoint("desktop", "max")
      height 60px

.sidebar

  +breakpoint("desktop")
    padding-top 40px

  .section-title
    letter-spacing: 1px;
    text-transform: uppercase;
    font-size: 12px;
    font-weight: 500;
    margin-bottom: 10px;
    color: $color-text-light;

    +breakpoint("desktop", "max")
      display none

  .sidebar-item
    list-style-type: none
    font-size: 14px
    padding: 6px 0

    .sidebar-item-icon
      margin-right: 12px

    .sidebar-item-name
      white-space: nowrap

    &.sidebar-item-depth0
      +breakpoint("desktop", "max")
        margin-left 15px
        margin-right 15px
        border-bottom 1px solid rgba(black, 0.1)

        > a
          font-size 15px
          display inline-block
          margin-top 8px
          margin-bottom 8px
          width 100%

    a
      &:link, &:visited
        color: color_text_light
      &:hover, &:active
        color: color_text_gray
      &.active
        color: color_text_gray
        font-weight: 500

  .sidebar-item-list
    padding: 0

    &:first-child
      padding-top: 0px

    &.sidebar-item-list-depth1
      max-height: 0;
      height: auto;
      overflow: hidden;
      padding-top: 0;
      padding-bottom: 0;
      padding-left: 15px;
      transition: max-height 0s linear;

      .sidebar-item-depth1,
      .sidebar-item-depth2
        padding 0
        font-size: $font-size-small;

        > a
          display inline-block
          width 100%
          padding 3px 0
          color: $color-text-light;

          &.active
            color: darken($color-blue-light, 5%);
            font-weight: $font-weight-normal;

      +breakpoint("desktop", "max")
        height auto
        max-height none

    &.sidebar-item-list-depth2
      padding-left: 20px;
      padding-top: 0;
      padding-bottom: 0;

  .is-current .sidebar-item-list-depth1
    max-height: 600px;
    transition: max-height 600ms ease-in-out;

  .sidebar-item-list-depth0
    padding-left: 0px

    +breakpoint("desktop", "max")
      height 60px
      overflow-y hidden
      margin-bottom 0

  .sidebar-item-depth0
    > a
      color: $color-text;
      font-weight: $font-weight-bold;

    &.is-current > a,
    &.is-current > a.active
      position: relative;
      color: $color-text;

      &::before
        +breakpoint("desktop")
          content: "";
          background: $color-blue-light;
          height: 8px;
          width: 8px;
          border-radius: 100%;
          display: block;
          position: absolute;
          left: -20px;
          top: 0.35em;
          right: auto;

  .mobile-dropdown-trigger
    width 100%
    border-bottom 1px solid rgba(black, 0.1)
    background-color white
    position relative
    height 60px
    cursor pointer

    +breakpoint("desktop")
      display none

  .mobile-dropdown-title
    margin 0
    line-height 60px
    font-size 15px
    font-weight $font-weight-bold
    position relative

    > span
      display block
      white-space nowrap
      overflow-x scroll
      padding-left 15px
      padding-right 70px

      > .arrow-icon
        font-size 12px
        color $color-text-light
        position relative
        top 1px
        margin-left 4px
        margin-right 4px

    &:after
      content ''
      position absolute
      top 0
      right 0
      bottom 8px //Dont hide the scrollbar
      width 80px
      background-color white
      background linear-gradient(to right, transparent 0%, white 40%);

  .mobile-dropdown-icon
    position absolute
    top 50%
    right 15px
    transform translateY(-50%)

  .mobile-dropdown-content
    background-color white

    +breakpoint("desktop", "max")
      height calc(100% - 60px)
      overflow-y scroll
