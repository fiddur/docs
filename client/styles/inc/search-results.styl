.search-results
  min-height: 300px;
  display: block;
  padding-top: 0px;
  border 0

  h2.title
    margin-top: 0;
    a
      font-weight: 400
      font-size: 20px
      // color: color_blue_light

  p
    font-size: 14px;
    margin-bottom: 0;
    a
      color: #999;

  .type-container
    // text-align: center;
    margin-top: 4px;
    margin-bottom: 10px;
  em
    background: lightyellow;
    color: brown;

  .type
    // box-shadow: 1px 1px 3px lightgray;
    color: gray;
    padding: 8px;
