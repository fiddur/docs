.search-control
  position: relative
  margin: 0

  i
    position: absolute
    top: 50%
    transform: translateY(-50%)
    left: 10px
    opacity: .5
    line-height 0

  .form-control
    border: 0
    background: rgba(black, 0.05)
    width: 100%
    -webkit-box-shadow: none
    -moz-box-shadow: none
    box-shadow: none
    height: 35px
    padding-left: 32px
