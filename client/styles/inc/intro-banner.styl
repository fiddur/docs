.intro-banner
  display: none
  position: relative
  overflow: hidden
  border-radius: 3px
  box-shadow: 0 0 10px rgba(0,0,0,0.1)
  padding: 40px
  margin-bottom: 40px
  opacity: 1
  transition: all 250ms ease-out

  +breakpoint("desktop")
    display: block

  &.intro-banner-leave
    opacity: 0
    height: 0
    padding: 0 40px
    margin: 0

  .intro-banner-image
    float: left
    background: url('../../public/img/quickstarts/jwt.svg')
    height: 120px
    width: 120px
    background-position: center center
    background-repeat: no-repeat
    background-size: cover
    margin-right: 40px

  .intro-banner-close
    color: color_text_light
    cursor: pointer
    position: absolute
    top: 10px
    right: 10px

  p
    font-size: 24px
    line-height: 32px
    margin: 0

  .intro-banner-buttons
    margin-top: 30px
    a
      margin-right: 12px

