.docs-home
  color: $color-text;

  .banner
    background: none;
    color: $color-text;
    margin: 0;
    transition: min-height 100ms ease;
    color: #333;
    padding: 40px 0;

    .banner-logo
      display: inline-block;
      background-color: #f5f7f9;
      -webkit-border-radius: 50%;
      border-radius: 50%;
      background-clip: padding-box;
      padding: 25px;

    i
      font-size: inherit;

    h1, p
      color: #333;
      line-height: 1.3;

    p + button
      margin: 0 15px;

  .section-product
    h2
      padding-top: 50px;
      padding-bottom: 40px;

      span:first-child
        margin: 0;
        color: #000;
        font-size: 35px;

      span
        font-size: 14px;
        color: $color-text;
        display: block;

        +breakpoint("desktop")
          display: inline;
          margin-left: 30px;

  .table-of-contents
    li
      margin-top: 10px;
      margin-bottom: 15px;

    li span
      display: block;
      margin-top: 5px;
      padding-right: 50px;

section
  .circle-list
    list-style: none;
    padding: 0;
    grid(2, 0, 'li');

    +breakpoint("mobile-landscape")
      grid(3, 0, 'li');

    +breakpoint("tablet")
      grid(5, 0, 'li');

    +breakpoint("desktop")
      grid(6, 0, 'li');


.list-howtos
  list-style: none;
  padding: 0;
  grid(1, 0, 'li');

  +breakpoint("mobile-landscape")
    grid(2, 20px, 'li');

  +breakpoint("desktop")
    grid(3, 20px, 'li');

  li
    margin: 15px 0;

  > div.row
    display: none;

    +breakpoint("desktop")
      display: inherit;


.subcontent-box
  border-radius: 3px;
  padding: 20px 30px;
  padding-top: 10px;
  background: white;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.1);

  ul
    list-style: none;
    padding: 0;

    li
      margin: 10px 0;

  h3
    color: $color-text;
    text-transform: uppercase;
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.05em;

.api-docs
  .subcontent-box
    +breakpoint("desktop")
      margin-top: -15px;

  .api-link
    color: $color-text;
    position: relative;
    display: block;

    &:hover
      i
        color: color_red;

      p
        color: #333;

    strong
      display: block;
      color: #333;

      +breakpoint("desktop")
        display: inline;
        line-height: 7rem;
        font-size: 16px;
        color: #333;

  i
    font-size: 40px;
    padding-top: 5px;
    margin-right: 15px;
    display: inline-block;
    vertical-align: top;
    color: rgba(51, 51, 51, 0.36);
    margin-bottom: 0px;

    +breakpoint("desktop")
      margin-bottom: -15px;

.section-product:nth-of-type(even)
  background: $bg-color-gray-light;

.section-product
  padding-bottom: 60px;

.showcase
  .container
    margin: 0 auto;
    padding-top: 40px;

  a
    color: $color-text;
    cursor: pointer;
    height: 190px;
    position: relative;

    &:focus
      text-decoration: none;

    +breakpoint("tablet")
      height: 140px;

    &:hover
      i
        color: color_red;

      p
        color: #333;

    i
      font-size: 30px;
      padding-top: 5px;
      margin-right: 20px;
      display: inline-block;
      vertical-align: top;
      color: rgba($color-text, 0.4);

      +breakpoint("desktop")
        font-size: 40px;

    .content
      display: block;
      max-width: 200px;

      +breakpoint("tablet")
        max-width: 170px;
        display: inline-block;
        vertical-align: top;


    strong
      color: #333;
      font-size: 18px;
      line-height: normal;

    p
      margin-top: 5px;
      font-size: 13px;

.circle-list-howtos
  margin-bottom: 60px;

.icon-scale
  i
    transition: all 150ms cubic-bezier(0.455, 0.03, 0.515, 0.955);
    // Disabled because of a weird chrome bug the causes text flickering

  &:hover i
    transform: scale(1.15);

.docs-top-nav
  .container
    clearfix();

    ul
      display: none;

      +breakpoint("desktop")
        display: block;

    ul,
    form
      +breakpoint("desktop")
        float: left;
        width: 65%;

    form
      +breakpoint("desktop")
        width: 35%;
