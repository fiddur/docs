    script(src=env.BASE_URL + '/js/commons.js')

    block head

    include inc/analytics
    include inc/ab-testing
    include inc/lock-sso

  body
    block body
    
  if (locals.user && user.tenants && user.tenants.length > 1)
    script.
      var getCookie = function (name) {
        var match = document.cookie.match(RegExp('(?:^|;\\s*)' + name + '=([^;]*)'));
        return match ? match[1] : null;
      };

      var setCookie = function (name, value, days) {
        var date = new Date();
        date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
        document.cookie = name + '=' + value + '; expires=' + date.toGMTString() + '; path=/; domain=#{env['COOKIE_SCOPE']}';
      }

      setCookie('#{env['CURRENT_TENANT_COOKIE']}', '#{user.tenant}', 7);

      setInterval(function () {
        var current_tenant = getCookie('#{env['CURRENT_TENANT_COOKIE']}');
        if (current_tenant && current_tenant !== '#{user.tenant}') {
          window.location.reload(true);
        }
      }, 3000);
