.api-info-wrapper
  .block-links
    p
      font-size 14px;
    p
      a
        font-size 16px;
    a
      font-weight: 500

  .api-info
      background: #f6f6f6;
      text-align: center
      .col-md-6
        border-left: 1px solid #fff;
        padding-top: 20px;
        padding-bottom: 20px;
        .wrapper-left
          margin-left: 40px;
          margin-right: 30px;
        .wrapper-right
          margin-left: 30px;
          margin-right: 40px;

        h4
          text-transform: uppercase
          margin-top: 30px
          margin-bottom: 0;
          font-size 16px

        p
          margin-top: 10px;

        .illustration
          height: 160px;
          background: color_grey
          border-bottom: 1px solid color_grey;
          background-size: 80%;
          background-position:  center 20px;
          background-repeat: no-repeat;
          border-radius: 3px;
          margin-top: 20px;
          display: block
          -webkit-transition: .5s ease all;

          &.i-postman
            background-image: url('../../public/img/api-info/postman.svg');

          &.i-apiexplorer
            background-image:  url('../../public/img/api-info/api_explorer.svg');


          &:hover
            background-color: darken(color_blue_light, 10%);
