      li.sidebar-item.sidebar-item-depth0
        a(href='/docs/api/management/v2/')
          span.sidebar-item-name Management API
        ul.sidebar-item-list.sidebar-item-list-depth1
          li.sidebar-item.sidebar-item-depth1
            a(href='/docs/api/management/v2/tokens')
              span.sidebar-item-name API Tokens
