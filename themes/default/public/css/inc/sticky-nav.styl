.js-sticky-nav
  .wrapper
    padding: 15px 0;
    border-bottom: 1px solid #EAEEF3;
  
  .list-inline
    margin: 0;
    font-size: 15px;
    
    a 
      color: lighten(color_oil, 20%);
      height: 35px;
      line-height: 35px;
      
      &:hover
        opacity: 0.7;
    
    li 
      margin: 0;
      padding: 0;
      
      & + li
        margin-left: 50px;