.api-sidebar
  line-height: 1;
  .sticky-nav
    &.fixed
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 600;

      +breakpoint("desktop")
        width: $nav-width;
        height: 100%;
        overflow-y: auto;

      +breakpoint("desktop-hd")
        width: $nav-width-hd;

    .tocify
      transition: height 300ms ease;
      height: 0;
      overflow-y: scroll;
      overflow-x: hidden;
      background: darken(color_gray_4, 15%);
      box-shadow: inset 0 2px 10px 0 rgba(0,0,0,0.4);
      line-height: 1;

      position: absolute;
      top: 43px;
      width: 100%;
      z-index: 500;

      +breakpoint("desktop")
        position: static;
        height: auto;
        overflow: visible;
        background: color_gray_1;
        box-shadow: none;

        .title
          display: inline-block;
          content: attr(label);
          text-transform: uppercase;
          letter-spacing: 0.08em;
          color: color_gray_4;
          font-size: 13px;
          font-weight 500;
          margin-bottom: 15px;
          margin-top: 30px;
          padding: 0 20px;

      [data-resource]
        +breakpoint("desktop")
          cursor: pointer;

        .item
          +breakpoint("desktop")
            display: none;

          .label
            text-transform: uppercase;
            color: white;
            font-size: 11px;
            margin-bottom: 10px;
            text-align: left;
            padding: 0;
            margin-left: 8px;
            opacity: 0.5;

            +breakpoint("desktop")
              color: #acb3ba;
              opacity: 1;

        &.active
          &:before
            +breakpoint("desktop")
              //color: #333;

          .item
            +breakpoint("desktop")
              display: block;


      .tocify-header
        padding: 0;
        margin: 0;
        &:hover,
        &:active
          &:before
            +breakpoint("desktop")
              //color: darken(color_gray_3, 10%);

        .tocify-item
          list-style: none;
          display: block;

          a
            display: block;
            color: white;
            padding: 10px 20px;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            font-size: 11px;
            font-weight 500;
            background: darken(color_gray_4, 25%);

            +breakpoint("desktop")
              background: none;
              text-transform: none;
              font-size: 16px;
              font-weight: normal;
              letter-spacing: 0;
              color: color_gray_4;

        .tocify-subheader
          padding: 0;

          .tocify-item
            a
              color: #5c666f;
              padding: 9px 9px 9px 40px;
              font-size: 14px;
              background: #f3f3f4;

          .tocify-focus
            a
              font-weight: 500;
              color: #333;



      [label="Tools"]
        +breakpoint("desktop")
          display: none;

      .tocify-item
        a
          padding: 12px 20px;
          color: white;
          cursor: pointer;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
          position: relative;

          +breakpoint("desktop")
            color: color_gray_4;
            padding: 9px;
            padding-left: 40px;
            font-size: 14px;
            background: darken(color_gray_1, 2%);

            &:hover,
            &:active
              color: darken(color_gray_3, 10%);

          &[data-tg-switch]
            &:after
              content: 'OFF';
              position: absolute;
              right: 20px;
              top: 8px;
              display: block;
              background: black;
              width: 40px;
              font-size: 11px;
              font-weight 500;
              text-transform: uppercase;
              text-align: center;
              padding: 5px 0;
              border-radius: 13px;
              opacity: 0.2;

            &.active:after
              content: 'ON';
              background: rgba(68, 199, 244, 0.5);
              opacity: 1;

        a
          color: #333;

        a.active,
        &[data-selected]
          background: rgba(68, 199, 244, 0.5);
          padding-right: 42px;

          +breakpoint("desktop")
            background: darken(color_gray_1, 2%);
            font-weight 500;
            color: #333;

            &:hover,
            &:active
              color: #333;

          &:after
            budicon("\E178");
            font-size: 12px;
            position: absolute;
            top: 15px;
            right: 20px;
            opacity: 0.7;
            pointer-events: none;

            +breakpoint("desktop")
              display: none;

        & + .tocify-item
          border-top: 1px solid darken(color_gray_4, 5%);

          +breakpoint("desktop")
            border-top: 1px solid color_gray_2;

    &.nav-open
      [data-navigator]
        height: 180px;
        height: 100vh;

        +breakpoint("desktop")
          height: auto;

  .custom-select
    position: relative;

    &.disabled
      opacity: 0.65;

    select
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      -webkit-appearance: none;

  .mobile-nav
    position: relative;
    background: white;
    padding: 15px 20px;
    cursor: default;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 12px;
    border-bottom: 1px solid darken(color_gray_1, 5%);
    z-index: 800;

    +breakpoint("desktop")
      display: none;

    &:after
      budicon("\E16E");
      font-size: 12px;
      position: absolute;
      top: 15px;
      right: 20px;
      opacity: 0.7;
      pointer-events: none;

    > span
      display: table-cell;

    .select-label
      color: color_gray_3;
      min-width: 110px;

    [data-selected-value]
      max-width: 140px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
