.navigation-bar
  min-height: 66px;

  &.is-fixed
    .wrapper
      +breakpoint("desktop")
        position: fixed;
        top: 0;
        left: 0;

  .wrapper
    border-bottom: 1px solid #EAEEF3;
    background: white;
    width: 100%;
    z-index: 800;

  form
    padding: 15px 0;

  .list-inline
    margin: 0;
    font-size: 15px;

    a
      color: rgba($color-text, 0.8);
      height: 35px;
      line-height: 35px;

      &:hover
        opacity: 0.7;

    li
      margin: 0;
      padding: 0;
      padding: 15px 0;

      &.is-active
        color: #333;
        font-weight: 500;
        box-shadow: 0 1px 0 0 #333;

        a
          color: #333;

      & + li
        margin-left: 50px;
