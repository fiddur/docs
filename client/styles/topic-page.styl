.docs-content.topic-page
  .icon
    color: $color-gray

  .topic-page-header
    position: relative
    padding: 0 0 30px 110px
    margin: 30px 0
    border-bottom: 1px solid $color-gray

    .topic-page-badge
      position: absolute
      left: 0
      top: 0
      height: 80px
      width: 80px
      background-size: 100% 100%
      background-repeat: no-repeat

      &[data-name='example']
        background-image: url('../../public/img/topic-page-badges/example.svg')

    h1
      font-size: 32px
      font-weight: 500
      margin-bottom: 0.5em

    p
      font-size: 16px
      color: $color-text-light

  h2
    font-size: 24px
    font-weight: 400
    margin-top: 48px
    margin-bottom: 24px
  
  ul.topic-links
    padding-left: 0
    
    li>a
      font-size: 18px
      line-height: 18px

    li
      list-style-type: none
      margin: 24px 0
      border-bottom: 1px solid $color-gray

      i
        padding-right: 10px
      p
        margin-bottom: 24px
      p:not(:last-child)
        margin-bottom: 12px

      ul
        margin: 0 0 24px 0
        padding-left: 24px

        li
          border-bottom: none
          margin: 0

          a
            font-size: 14px
