.docs-single
  .breadcrumbs
    border none
    float left
    padding-left 0
    margin-left 0
    box-shadow none
    display none
    +breakpoint("tablet")
      display block

  .navigation-bar form
    width 100%
    float right
    +breakpoint("tablet")
      width 35%

.sidebar-menu
  border 1px solid #EAEEF3
  border-radius 3px
  margin-top 20px
  +breakpoint("tablet")
    margin-top 60px

  [data-accordion] [data-content]
    overflow hidden
    max-height 0

  ul, li
    margin 0
    padding 0

  li
    list-style none
    margin-bottom 15px
    &:last-child
      margin-bottom 0

  a
    font-size 13px

  .nav-title
    cursor pointer
    padding 20px
    i
      float right
      color #A9B3BC
      -webkit-transition transform .3s ease-in-out
      transition transform .3s ease-in-out
    h2
      font-size 13px
      font-weight 700
      text-transform uppercase
      color color_oil
      margin 0

  .nav-content
    padding 0 20px
    li:last-child
      margin-bottom 20px

  .accordion
    &.open
      .plus
        &:before
          transform rotate(0deg)
    .accordion
      background-color rgba(#EAEEF3,.25)
      border-top 1px solid rgba(#A9B3BC,.25)
      -webkit-transition background .5s ease-out
      transition background .5s ease-out
      &.open
        background-color white
        .nav-title
          i
            -webkit-transform rotate(90deg) translate(-2px,5px)
            transform rotate(90deg) translate(-2px,5px)

    &:first-child
      +breakpoint("tablet")
        border none

  .principal-title
    padding 20px
    .plus
      background #A9B3BC
      float right
      width 10px
      height 1px
      display block
      margin-top 10px
      &:before
        content ''
        background #A9B3BC
        display block
        width 10px
        height 1px
        transform rotate(270deg)
        transition transform .3s ease-out
    h2
      font-size 13px
      font-weight 700
      text-transform uppercase
      color color_oil
      margin 0
    +breakpoint("tablet")
      display none

  .principal-content
    +breakpoint("tablet")
      max-height 100%!important

