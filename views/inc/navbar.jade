mixin navbar(active)
  .navigation-bar
    .container
      form#search.search-form(role='search', autocomplete='off')
        .form-group.search-control.navigation-bar-search
          label(for='nav-search-input')
            i.icon-budicon-489.visible-xs-inline-block
            i.icon-budicon-489.hidden-xs
          input#nav-search-input.search-input.form-control(type='text', placeholder='Search for docs')
      ul.navigation-bar-tabs.nav.nav-tabs
        li.nav-tab(class=active === 'articles' ? 'active' : '')
          a(href='/docs/overview') Articles
        li.nav-tab(class=active === 'api' ? 'active' : '')
          a(href='/docs/api/info') APIs
        li.nav-tab(class=active === 'quickstarts' ? 'active' : '')
          a(href='/docs/quickstarts') QuickStarts
        li.nav-tab(class=active === 'appliance' ? 'active' : '')
          a(href='/docs/appliance') Appliance
