doctype html
html(lang="en")
  head
    title= title + ' - ' + site.title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="")
    meta(name="author", content="")

    link(rel="shortcut icon", href="//cdn.auth0.com/styleguide/latest/lib/logos/img/favicon.png")
    link(href="//cdn.auth0.com/styleguide/latest/index.css", rel="stylesheet")
    link(href=env.BASE_URL + "/css/docs.css", rel="stylesheet")

    link(href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800", rel="stylesheet", type='text/css')
    link(rel='stylesheet', type='text/css', href='/css/prettify.css')

    script(type='text/javascript', src='//use.typekit.net/iws6ohy.js')
    script.
      try{Typekit.load();}catch(e){}

    <!--[if lt IE 9]>
    script(src="http://html5shim.googlecode.com/svn/trunk/html5.js")
    <![endif]-->

    include inc/analytics

  body
    .nosidebar.page-docs.container
      section
        != sections.content

      footer
        span Powered by
          a(href="//auth0.com") Auth0

  script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js')
  script(src=env.BASE_URL + '/js/prettify.js')
  script(type='text/javascript').
    !function ($) {
      $(function(){
        $('pre').addClass('prettyprint');
        window.prettyPrint && prettyPrint()
      })
    }(window.jQuery);

  script.
    var sectionIndex = 1;
    $('h2,h3,h4').each(function(){
      $(this)
        .attr('id', sectionIndex)
        .prepend('<a class="anchor" href="#' + sectionIndex + '"><i class="fa fa-link"></i></a>');
      sectionIndex++;
    });
